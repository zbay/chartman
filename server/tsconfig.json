{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@accounts/*": [
        "modules/accounts/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@currencies/*": [
        "modules/currencies/*"
      ],
      "@errors/*": [
        "modules/errors/*"
      ],
      "@migration/*": [
        "modules/db-migration/*"
      ],
      "@shared/*": [
        "modules/shared/*"
      ],
      "@stocks/*": [
        "modules/stocks/*"
      ],
      "@technicals/*": [
        "modules/technicals/*"
      ]
    }
  },
  "exclude": ["node_modules"]
}
